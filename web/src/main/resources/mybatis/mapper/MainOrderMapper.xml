<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wu.web.dao.OrderDao">

<!--    addOrder-->
    <insert id="addOrder" parameterType="com.wu.common.domain.MainOrder">
        insert into Orchard.subOrder (customerId, goodId, goodPrice, shippingPrice, createdTime, finishedTime, orderStatus, shippingAddress, goodName, companyId, companyName, deliveryAddress, amount, expressId, subOrderId)
        values (#{customerId}, #{goodId}, #{goodPrice}, #{shippingPrice}, #{createdTime}, #{finishedTime}, #{orderStatus}, #{shippingAddress}, #{goodName}, #{companyId}, #{companyName}, #{deliveryAddress}, #{amount}, #{expressId}, #{subOrderId})
    </insert>

<!--    queryBuOrderId-->
    <select id="queryByOrderId" parameterType="com.wu.common.domain.MainOrder">
        select * from Orchard.subOrder where goodId = #{orderId}
    </select>

<!--    queryBycustomerId-->
    <select id="queryByCustomerId" parameterType="com.wu.common.domain.MainOrder">
        select * from Orchard.subOrder where customerId = #{customerId};
    </select>

    <insert id = "inShoppingCart" parameterType="com.wu.common.domain.company.Good">
        insert into Orchard.subOrder values (#{customerId}, #{goodId}, #{goodPrice}, #{shippingPrice}, #{createdTime}, #{finishedTime}, #{orderStatus}, #{shippingAddress}, #{goodName}, #{companyId}, #{companyName}, #{deliveryAddress}, #{amount}, #{expressId}, #{subOrderId})
    </insert>

    <!--    orderpending-->
    <update id="purchase" parameterType="com.wu.common.domain.MainOrder">
        update Orchard.subOrder set orderStatus=1 where goodId in
        <foreach collection="orders" item="goodId" separator=",">
        </foreach>
    </update>

    <insert id="subOrderIntoMainOrder" parameterType="com.wu.common.domain.MainOrder">
        insert into Orchard.MainOrder values (#{customerId}, #{mainOrderId}, #{mainOrderPrice}, #{mainOrderStatus}, #{amount})
        <foreach collection="orders" item="goodId">
        </foreach>
    </insert>

    <update id="itemSelected" parameterType="com.wu.common.domain.MainOrder">
        update Orchard.subOrder set orderStatus=8 where subOrderId = #{subOrderId}
    </update>

<!--    <update id="orderReceived" parameterType="com.wu.common.domain.MainOrder">-->
<!--        update Orchard.subOrder set orderStatus=2 where subOrderId = #{subOrderId}-->
<!--    </update>-->

<!--    <update id="expressReceived" parameterType="com.wu.common.domain.MainOrder">-->
<!--        update Orchard.subOrder set orderStatus=3 where subOrderId = #{subOrderId}-->
<!--    </update>-->

    <update id="orderShipping" parameterType="com.wu.common.domain.MainOrder">
        update Orchard.subOrder set orderStatus=4 where subOrderId = #{subOrderId}
    </update>

<!--    <update id="orderShipped" parameterType="com.wu.common.domain.MainOrder">-->
<!--        update Orchard.subOrder set orderStatus=5 where subOrderId = #{subOrderId}-->
<!--    </update>-->

    <update id="orderFinished" parameterType="com.wu.common.domain.MainOrder">
        update Orchard.subOrder set orderStatus=6 where subOrderId = #{subOrderId}
    </update>

    <update id="orderCancelled" parameterType="com.wu.common.domain.MainOrder">
        update Orchard.subOrder set orderStatus=7 where subOrderId = #{subOrderId}
    </update>

    <delete id="removeFromShoppingCart" parameterType="com.wu.common.domain.MainOrder">
        delete from Orchard.subOrder where subOrderId = #{subOrderId}
    </delete>

    <!--    orderReceived-->
    <update id="orderReceived" parameterType="com.wu.common.domain.MainOrder">
        update Orchard.subOrder set orderStatus=2 where goodId=#{orderId}
    </update>

<!--    -->

</mapper>